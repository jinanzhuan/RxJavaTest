        android:text="groupby"/>

    <Button
        android:onClick="buffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buffer"/>

    <Button
        android:onClick="scan"
        android:layout_width="wrap_content"
