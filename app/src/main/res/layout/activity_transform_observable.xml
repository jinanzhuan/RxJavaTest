    <Button
        android:onClick="map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="map"/>

    <Button
        android:onClick="flatmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flatmap"/>

    <Button
        android:onClick="group_by"
        android:layout_width="wrap_content"
