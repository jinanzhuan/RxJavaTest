<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rxjavatest.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

      <Button
          android:onClick="create_observable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="create_observable"/>

      <Button
          android:onClick="transform_observable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="transform_observable"/>

      <Button
          android:onClick="filter_observable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="filter_observable"/>

      <Button
          android:onClick="combine_observable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="combine_observable"/>

      <Button
          android:onClick="error_observable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="error_observable"/>

   </LinearLayout>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:gravity="center"
       android:text="@string/describe_rxjava"
       android:layout_margin="10dp"
       android:paddingBottom="30dp"/>

</RelativeLayout>
